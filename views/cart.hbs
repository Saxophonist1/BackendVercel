<h1 class="parrafo1">{{title}}</h1>
<p class="parrafo1">Bienvenido al mejor mercado para comprar acciones de las mejores empresas en la actualidad</p>

{{# if products }}
    <div class="cart page">
        <ul class="list-group">
            {{# each products }}
            <li class="list-group-item clearfix">
                <div class="col-xs-5">
                    <strong>{{ this.item.title }}</strong><br/>
                    <em>{{{this.item.description}}}</em>
                </div>
                <div class="col-xs-2 text-right">
                    <span class="badge">{{ this.quantity }}</span>
                </div>
                <div class="col-xs-3 text-right">
                    {{ this.price }} €
                </div>
                <div class="col-xs-2 text-right">
                    <a href="/remove/{{this.item.id}}" class="btn btn-default"></i> Eliminar</a>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
    <div class="text-right">
        <strong class="parrafo1">Total: {{ totalPrice }} €</strong>
    </div>
    <hr>
    <div class="text-right">
        <a href="#" type="button" class="btn btn-success">Comprar</a>
    </div>
{{ else }}
    <br>
    <p class="parrafo1">Tu cesta de la compra está vacía</p>
{{/if}}